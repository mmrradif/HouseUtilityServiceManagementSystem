@model House_Utiliti_Service.Models.Worker
@using (Ajax.BeginForm("EditWorker", "Workers", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    LoadingElementId = "spinner"

}, new { id = "f" }))
{
    @Html.HiddenFor(x => x.WorkerId)
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.WorkerName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.WorkerName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.WorkerName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Payrate, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Payrate, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.Payrate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.IsRunning, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.CheckBoxFor(x => x.IsRunning, new { @class = "form-check" })
            @Html.ValidationMessageFor(x => x.IsRunning, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-1">

        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}

