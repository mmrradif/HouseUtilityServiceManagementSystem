@model House_Utiliti_Service.Models.Worker
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3>Cofirm delete</h3>
    </div>
    <div class="col-12">
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.WorkerName, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.WorkerName)

            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.Phone)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Payrate, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.Payrate)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.IsRunning, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.IsRunning)
            </div>
        </div>
        <div class="form-group row mb-1">

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.WorkerId)
                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            }
        </div>
    </div>
    <div class="col-12">

        @Html.ActionLink("Back to list", "Index")
    </div>
</div>

