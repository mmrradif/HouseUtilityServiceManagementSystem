<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
       
        .main {
            padding-top:20px;
            height: calc(100vh - 140px);
        }
    </style>
    @RenderSection("styles", false)

</head>
<body>
    <nav class="navbar navbar-light bg-success navbar-expand-md  shadow-sm text-white">
        <div class="container-fluid">
            <span class="navbar-brand">House_Utiliti_Service</span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav nav ">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("WorkAreas", "Index", "WorkAreas", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Workers", "Index", "Workers", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Works", "Index", "Works", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Payment", "Index", "WorkerPayments", new { }, new { @class = "nav-link" })
                    </li>

                </ul>
                @if (Request.IsAuthenticated)
                {
                    <ul class="navbar-nav nav ms-auto">

                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })
                        </li>


                    </ul>

                }
                else
                {
                    <ul class="navbar-nav nav ms-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", new { }, new { @class = "nav-link" })
                        </li>


                    </ul>
                }
            </div>
        </div>
    </nav>
    <section class="container-fluid main" style="padding-top:20px;">
        @RenderBody()
    </section>
    <footer class="container-fluid">
        <p>Directed by S.M.Atiqur Rahman Id-1268952</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>